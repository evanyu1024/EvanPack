<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.demoview.MetrialDesignDemo">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="自定义子控件"
            android:textColor="@color/white"/>

    </android.support.v7.widget.Toolbar>

    <!--
    backgroundTint: 按钮的颜色，默认取的是theme中的colorControlHighlight
    rippleColor: 按钮点击时的颜色（水波纹效果），默认取的是theme中的colorAccent
    elevation: 阴影大小（默认是 6dp）
    pressedTranslationZ: 点击时的阴影大小（默认是 12dp）
    borderWidth: button 的边框宽度
    fabSize: 大小尺寸
    -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_launcher"
        app:backgroundTint="@android:color/holo_green_light"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@android:color/holo_green_dark"/>

</android.support.constraint.ConstraintLayout>